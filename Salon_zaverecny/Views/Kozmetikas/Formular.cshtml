
@{
    ViewData["Title"] = "Objednajte sa";
}

<h1>Objednajte sa</h1>
<br />
<br />

<form asp-controller="Kozmetikas" asp-action="Formular" method="post">

    <div class="form-group row">
        <div class="col-sm-3">
            <input name="meno" class="form-control" type="text" placeholder="Meno">
        </div>
        <div class="col-sm-3">
            <input name="priezvisko" class="form-control" type="text" placeholder="Priezvisko">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            <input name="cislo" class="form-control" type="text" placeholder="Tel. číslo">
        </div>
    </div>
    <br />
    <fieldset class="form-group">
        <div class="row">
            <div class="col-sm-5">
                <legend>Služba</legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sluzba" id="gridRadios1" value="osetrenie" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Ošetrenie pleti
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="sluzba" id="gridRadios2" value="cistenie">
                        <label class="form-check-label" for="gridRadios2">
                            Čistenie pleti
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="sluzba" id="gridRadios3" value="vytrhanie_obocia">
                        <label class="form-check-label" for="gridRadios3">
                            Vytrhanie obočia
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="sluzba" id="gridRadios4" value="farbenie_obocia">
                        <label class="form-check-label" for="gridRadios4">
                            Farbenie obočia
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="sluzba" id="gridRadios5" value="mihalnice">
                        <label class="form-check-label" for="gridRadios5">
                            3D mihalnice
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="sluzba" id="gridRadios6" value="denne_licenie">
                        <label class="form-check-label" for="gridRadios6">
                           Denné líčenie
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="sluzba" id="gridRadios7" value="vecerne_licenie">
                        <label class="form-check-label" for="gridRadios7">
                            Večerné líčenie
                        </label>
                    </div>
                    <div class="form-check disabled">
                        <input class="form-check-input" type="radio" name="sluzba" id="gridRadios8" value="svadobne_licenie">
                        <label class="form-check-label" for="gridRadios8">
                            Svadobné líčenie
                        </label>
                    </div>
                    

                </div>
            </div>
        </div>
    </fieldset><br /><br />

    <div style="overflow:hidden;">
        <div class="form-group">
            <div class="row">
                <div class="col-md-8">
                    <input name="datum" id="datetimepicker12" data-date-format="DD-MM-YYYY HH:00">
                </div>
            </div>
        </div>

    </div>

    <br /><br />
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Odoslať objednávku</button>
        </div>
    </div>
</form>
















