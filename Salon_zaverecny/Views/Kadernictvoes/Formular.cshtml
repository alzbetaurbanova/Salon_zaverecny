
@{
    ViewData["Title"] = "Objednajte sa";
}

<h1>Objednajte sa</h1>
<br />
<br />

<form asp-area="" asp-controller="Home" asp-action="Formular" method="post">
    <div class="form-group row">
        <div class="col-sm-3">
            <input name="meno" class="form-control" type="text" placeholder="Meno"><br />
        </div>
        <div class="col-sm-3">
            <input name="priezvisko" class="form-control" type="text" placeholder="Priezvisko"><br />
        </div>
    </div><br />
    Kontakt:<br /><br />
    <div class="form-group row">
        <div class="col-sm-4">
            <input name="telcislo" type="tel" class="form-control" id="telcislo" placeholder="Telefónne číslo">
        </div>
    </div><br />
    <div class="row">
        <div class="col-sm-5">
            Služba:<br />
        </div>
        <div class="col-sm-2">
            Hodina<br />
        </div>
    </div><br />
    <div class="row">
        <div class="col-sm-5">
            <select class="form-control">
                <option>Dámsky strih</option>
                <option>Pánsky strih</option>
                <option>Detský strih</option>
                <option>Farbenie</option>
                <option>Melír</option>
                <option>Svadobný účes</option>
                <option>Spoločenský účes</option>
                <option>Predlžovanie vlasov</option>
                <option>Zahusťovanie vlasov</option>
            </select>
        </div><br />
        <div class="col-sm-2">
            <select class="form-control form-control-sm">
                <option>9:00</option>
                <option>10:00</option>
                <option>11:00</option>
                <option>13:00</option>
                <option>14:00</option>
                <option>15:00</option>
                <option>16:00</option>
            </select>
        </div>
        <br /><br />
        <div class="form-group row">
            <div class="col-sm-10">
                <button  type="submit" class="btn btn-primary"> Odoslať objednávku </button>
                @*<a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Odoslať objednávku</a>*@
            </div>
        </div>
    </div>


    <div style="overflow:hidden;">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8">
                        <input name="datum" id="datetimepicker12">
                    </div>
                </div>
            </div>

        </div>




</form>

